<%= render 'layouts/nav' %>
<div class="container">
  <br>
  <br>
  <br>
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3 well">
      <h1 class="text-center">Log In</h1>
      <%= form_for :user, url:"/login", method: "post" do |f| %>
        <div class="form-group">
          <%= f.email_field :email, placeholder: "Email", required: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, placeholder: "Password", required: true, class: "form-control" %>
        </div>
        <center><%= f.submit "Log In", class: "btn btn-default" %></center>
      <% end %>
    </div>
  </div>
</div>

