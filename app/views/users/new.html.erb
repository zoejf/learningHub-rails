<%= render 'layouts/nav' %>
<div class="container">
  <br>
  <br>
  <br>
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3 well">
      <h1 class="text-center">Sign Up</h1>
      <%= form_for @user do |f| %>
        <div class="form-group">
          <%= f.text_field :first_name, placeholder: "First Name", autofocus: true, required: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.text_field :last_name, placeholder: "Last Name", required: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.email_field :email, placeholder: "Email", required: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, placeholder: "Password", required: true, class: "form-control" %>
          <span class="help-block">Password must be at least 6 characters</span>
        </div>
        <div class="form-group">
          <center><%= f.submit "Sign Me Up!", class: "btn btn-default text-center" %></center>
        </div>
        <p class="text-center">Already have an account? <%= link_to "Log in here.", login_path %></p>
      <% end %>
    </div>
  </div>
</div>
