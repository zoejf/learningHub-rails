<%= render 'layouts/nav' %>
<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <div class="row">
        <div class="col-xs-2">
          <div class="thumbnail resource"><img src="<%= @resource.image %>" class="logo"></div>
        </div>
        <div class="col-xs-10">
         <h3 style="font-size:20px"><%= @resource.name %> <small>&nbsp;&nbsp;<a href="<%= @resource.website %>", target="_blank"><i class="fa fa-external-link"></i></a><span class="pull-right"><i class="fa fa-thumbs-up"> 3 people use it</i></span></small></h3> 
          <p><strong>Price: </strong><%= @resource.price %></p>
          <p class="line-spacing"><% @resource.tags.each do |tag| %>
              <span class="btn btn-default btn-xs">
                <%= link_to(tag_path(tag)) do %>
                  <i class="fa <%= tag.image %>"></i>
                  &nbsp;<%= tag.text %> 
                <% end %>
              </span>
              &nbsp;&nbsp;&nbsp;
             <% end %>
          </p>
          <p><%= @resource.description %></p>
        </div>
      </div>
      <br>
    </div>
  </div>
</div>