<div id="tags-section">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <br>
        <span class="section-heading"><h1>Popular Searches</h1></span>
        <br>
        <div class="row">
          <% @tags.each do |tag| %>
            <div class="col-sm-3">
              <%= link_to(tag_path(tag)) do %>
                <div class="thumbnail tag">
                  <i class="fa <%= tag.image %>"></i>
                  <br>
                  <%= tag.text %>
                </div>
              <% end %>
            </div>
          <% end  %>
        </div>
        <br>
        <br>
      </div>
      <br>
      <br>
      <br>
      <br>
      <br>
      <br>
      <br>
    </div>
  </div>
</div> <!-- end of tags section -->
<div id="resources-section">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <br>
        <span class="section-heading"><h1>Popular Learning Resources</h1></span>
          <% @resources.limit(5).each do |resource| %>
            <div class="row">
              <div class="col-xs-2">
                <div class="thumbnail resource"><img src="<%= resource.image %>" class="logo"></div>
              </div>
              <div class="col-xs-10">
               <h3 style="font-size:20px"><a href="<%= resource.website %>" target="_blank"><%= resource.name %></a> <small class="pull-right"><i class="fa fa-thumbs-up"> 3 people use it</i></small></h3> 
                <p><strong>Price: </strong><%= resource.price %></p>
                <p><% resource.tags.each do |tag| %>
                      <%= link_to(tag_path(tag)) do %>
                        <i class="fa <%= tag.image %>"></i>
                        &nbsp;<%= tag.text %> 
                      <% end %>
                        &nbsp;&nbsp;
                    <% end %>
                </p>
                <p><%= resource.description %></p>
              </div>
            </div>
            <br>
        <% end %>
    </div>
  </div> 
</div>  <!-- end of resources section -->
